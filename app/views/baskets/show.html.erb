<h1>Your Basket</h1>

<div id="basket">
  <table>
    <tr>
      <th>Product Name</th>
      <th>Price</th> 
      <th>Quantity</th>
    </tr>
      <% @basket.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= @basket.items.find_by(product_id: product.id).quantity %></td>
      </tr>
      <% end %>
  </table>
</div>