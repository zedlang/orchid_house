<h2><%= @product.name %></h2>
<p>Price: <%= @product.price %></p>
<p>Number in stock: <%= @product.quantity %></p>

<% admins_only do %>
  <ul>
    <li>
        <%= link_to "Edit Product", edit_admin_product_path %>
    </li>
    <li>
        <%= link_to "Delete Product", admin_product_path(@product),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this product?" } %>
    </li>
  </ul>
<% end %>