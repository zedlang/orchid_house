<h2><%= @product.name %></h2>
<div class="fullimage">
  <%=image_tag("#{@product.name}.jpg", alt: "#{@product.name}.jpg")%>
</div>
<div id="product">
  <p><strong>Price:</strong> Â£<%= @product.price %></p>
  <p><strong>Number in stock:</strong> <%= @product.quantity %></p>
</div>

<% admins_only do %>
  <%= link_to "Edit Product", edit_admin_product_path, class: "link_button" %>
  <%= link_to "Delete Product", admin_product_path(@product),
  method: :delete,
  data: { confirm: "Are you sure you want to delete this product?" }, class: "link_button" %>
<% end %>